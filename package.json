{
  "name": "@badgebuddy/processor",
  "version": "1.0.1-2",
  "description": "Processing app for badge buddy operations.",
  "author": "SlinkyPotato <patinobrian@gmail.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "20.11.1",
    "pnpm": "8.15.5"
  },
  "engineStrict": true,
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "build": "nest build",
    "clean": "rm -rf dist && rm -rf coverage && rm -rf node_modules",
    "start": "nest start",
    "dev": "nest start --watch",
    "dev:debug": "nest start --debug --watch",
    "dev:docker": "docker compose up --build",
    "dev:api": "cd ../api && pnpm dev",
    "dev:web": "cd ../web && pnpm dev",
    "dev:bot": "cd ../discord-bot && pnpm dev",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "env:push": "dotenv-vault push",
    "env:open": "dotenv-vault open",
    "env:pull": "dotenv-vault pull",
    "publish-docker:staging": "node publish.docker.js staging latest-beta",
    "publish-docker:production": "node publish.docker.js production latest",
    "sync": "git fetch && git pull && pnpm install",
    "sync:env": "git fetch && git pull && pnpm install && dotenv-vault pull"
  },
  "dependencies": {
    "@badgebuddy/common": "2.3.2",
    "@discord-nestjs/common": "^5.2.12",
    "@discord-nestjs/core": "^5.3.14",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/bull": "^10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.2",
    "bull": "^4.15.1",
    "cache-manager": "^5.7.3",
    "cache-manager-redis-yet": "^4.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "dotenv-vault": "^1.26.2",
    "joi": "^17.13.3",
    "mysql2": "^3.10.3",
    "redis": "^4.6.15",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "standard-version": "^9.5.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.3.10",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.7.0",
    "@types/node": "^20.14.12",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  }
}
